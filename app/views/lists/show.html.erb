<div class="container">
  <div class = "d-flex justify-content-between mt-3">
    <h1><%= @list.name %></h1>
    <%= link_to 'Add Bookmark', new_list_bookmark_path(@list), class:"btn btn-success" %>
  </div>

  <h2>Bookmarks</h2>
    <div class="cards d-flex justify-content-around">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="card m-3" style="width: 18rem;">
        <img src=<%= bookmark.movie.poster_url %> class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title"><%= bookmark.movie.title %></h5>
          <p class="card-text"><%= bookmark.movie.overview %></p>
          <p class="card-text"><i class="fa-solid fa-quote-left"></i> Comment : <%= bookmark.comment %></p>
          <%= link_to 'Delete', list_bookmark_path(@list, bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>


  <%= link_to 'Back to Lists', lists_path %>
</div>
